{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "启动后端服务",
			"type": "shell",
			"command": "dotnet run --project Backend/Backend.csproj",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true
			},
			"runOptions": {
				"runOn": "default"
			}
		},
		{
			"label": "启动前端应用",
			"type": "shell",
			"command": "npm run dev",
			"options": {
				"cwd": "${workspaceFolder}/Frontend"
			},
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": false,
				"clear": true
			},
			"runOptions": {
				"runOn": "default"
			}
		},
		{
			"label": "🚀 启动全栈应用",
			"dependsOrder": "parallel",
			"dependsOn": [
				"启动后端服务",
				"启动前端应用"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		}
	]
}